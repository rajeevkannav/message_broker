<p id="notice"><%= notice %></p>

<h4>Listing Rules</h4>

<table class="w3-table w3-bordered w3-striped w3-card-4">
  <thead>
  <tr class="w3-blue">
    <th>Target</th>
    <th>Event</th>
    <th>Activity</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @rules.each do |rule| %>
      <tr>
        <td><%= rule.target %></td>
        <td><%= rule.event %></td>
        <td><%= rule.activity.name %></td>
        <td><%= link_material_icon_to(rule, 'lightbulb_outline') %></td>
        <td><%= link_material_icon_to(edit_rule_path(rule), 'edit') %></td>
        <td>
          <%= link_to "#{content_tag :i, 'delete_forever', class: 'material-icons w3-xxlarge'}".html_safe, rule,
                      method: :delete, data: {confirm: 'Are you sure?'} %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Rule', new_rule_path %>
